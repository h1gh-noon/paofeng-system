<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.paofeng.order.mapper.OrderMapper">

    <resultMap type="OrderVo" id="OrderResultVo">
        <result property="orderId" column="order_id"/>
        <result property="creatId" column="creat_id"/>
        <result property="shopName" column="shop_name"/>
        <result property="creatName" column="creat_name"/>
        <result property="currentRider" column="current_rider"/>
        <result property="currentRiderName" column="current_rider_name"/>
        <result property="pickupAddress" column="pickup_address"/>
        <result property="takeTime" column="take_time"/>
        <result property="pickupTime" column="pickup_time"/>
        <result property="successTime" column="success_time"/>
        <result property="customerName" column="customer_name"/>
        <result property="customerPhone" column="customer_phone"/>
        <result property="customerAddress" column="customer_address"/>
        <result property="status" column="status"/>
        <result property="productMoney" column="product_money"/>
        <result property="deliveryFee" column="delivery_fee"/>
        <result property="remark" column="remark"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <resultMap type="Order" id="OrderResult">
        <result property="orderId" column="order_id"/>
        <result property="creatId" column="creat_id"/>
        <result property="shopName" column="shop_name"/>
        <result property="currentRider" column="current_rider"/>
        <result property="pickupAddress" column="pickup_address"/>
        <result property="takeTime" column="take_time"/>
        <result property="pickupTime" column="pickup_time"/>
        <result property="successTime" column="success_time"/>
        <result property="customerName" column="customer_name"/>
        <result property="customerPhone" column="customer_phone"/>
        <result property="customerAddress" column="customer_address"/>
        <result property="status" column="status"/>
        <result property="productMoney" column="product_money"/>
        <result property="deliveryFee" column="delivery_fee"/>
        <result property="remark" column="remark"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <sql id="selectOrderVo">
        select o.order_id,
               o.creat_id,
               o.shop_name,
               o.take_time,
               o.pickup_time,
               o.success_time,
               u.user_name creat_name,
               o.current_rider,
               n.user_name current_rider_name,
               o.pickup_address,
               o.customer_name,
               o.customer_phone,
               o.customer_address,
               o.status,
               o.product_money,
               o.delivery_fee,
               o.create_time,
               o.remark
        from pangfeng_order o
                 left join sys_user n on o.current_rider = n.user_id
                 left join sys_user u on o.creat_id = u.user_id

    </sql>

    <select id="selectOrderList" parameterType="OrderVo" resultMap="OrderResultVo">
        <include refid="selectOrderVo"/>
        <where>
            <if test="orderId != null  and orderId != ''">and o.order_id like concat('%', #{orderId}, '%')</if>
            <if test="creatId != null ">and o.creat_id = #{creatId}</if>
            <if test="creatName != null ">and u.user_name like concat('%', #{creatName}, '%')</if>
            <if test="currentRider != null ">and o.current_rider = #{currentRider}</if>
            <if test="currentRiderName != null ">and n.user_name like concat('%', #{currentRiderName}, '%')</if>
            <if test="pickupAddress != null and pickupAddress != ''">and o.pickup_address like concat('%',
                #{pickupAddress}, '%')
            </if>
            <if test="customerPhone != null ">and o.customer_phone like concat('%', #{customerPhone}, '%')</if>
            <if test="status != null  and status != ''">and o.status = #{status}</if>
            <if test="params != null">
                <if test="params.beginTime != null and params.beginTime != ''"><!-- 开始时间检索 -->
                    AND date_format(o.create_time,'%y%m%d') &gt;= date_format(#{params.beginTime},'%y%m%d')
                </if>
                <if test="params.endTime != null and params.endTime != ''"><!-- 结束时间检索 -->
                    AND date_format(o.create_time,'%y%m%d') &lt;= date_format(#{params.endTime},'%y%m%d')
                </if>
            </if>
        </where>
    </select>

    <select id="selectOrderByOrderId" parameterType="String" resultMap="OrderResultVo">
        <include refid="selectOrderVo"/>
        where o.order_id = #{orderId}
    </select>

    <insert id="insertOrder" parameterType="Order">
        insert into pangfeng_order
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="orderId != null">order_id,</if>
            <if test="creatId != null">creat_id,</if>
            <if test="shopName != null">shop_name,</if>
            <if test="currentRider != null">current_rider,</if>
            <if test="pickupAddress != null">pickup_address,</if>
            <if test="customerName != null">customer_name,</if>
            <if test="customerPhone != null">customer_phone,</if>
            <if test="customerAddress != null">customer_address,</if>
            <if test="productMoney != null">product_money,</if>
            <if test="deliveryFee != null">delivery_fee,</if>
            <if test="remark != null">remark,</if>
            <if test="createTime != null">create_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="orderId != null">#{orderId},</if>
            <if test="creatId != null">#{creatId},</if>
            <if test="shopName != null">#{shopName},</if>
            <if test="currentRider != null">#{currentRider},</if>
            <if test="pickupAddress != null">#{pickupAddress},</if>
            <if test="customerName != null">#{customerName},</if>
            <if test="customerPhone != null">#{customerPhone},</if>
            <if test="customerAddress != null">#{customerAddress},</if>
            <if test="productMoney != null">#{productMoney},</if>
            <if test="deliveryFee != null">#{deliveryFee},</if>
            <if test="remark != null">#{remark},</if>
            <if test="createTime != null">#{createTime},</if>
        </trim>
    </insert>

    <update id="updateOrder" parameterType="Order">
        update pangfeng_order
        <trim prefix="SET" suffixOverrides=",">
            <if test="creatId != null">creat_id = #{creatId},</if>
            <if test="currentRider != null">current_rider = #{currentRider},</if>
            <if test="pickupAddress != null">pickup_address = #{pickupAddress},</if>
            <if test="customerName != null">customer_name = #{customerName},</if>
            <if test="takeTime != null">take_time = #{takeTime},</if>
            <if test="pickupTime != null">pickup_time = #{pickupTime},</if>
            <if test="successTime != null">success_time = #{successTime},</if>
            <if test="customerPhone != null">customer_phone = #{customerPhone},</if>
            <if test="customerAddress != null">customer_address = #{customerAddress},</if>
            <if test="status != null">status = #{status},</if>
            <if test="productMoney != null">product_money = #{productMoney},</if>
            <if test="deliveryFee != null">delivery_fee = #{deliveryFee},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where order_id = #{orderId}
    </update>

    <delete id="deleteOrderByOrderId" parameterType="String">
        delete
        from pangfeng_order
        where order_id = #{orderId}
    </delete>

    <delete id="deleteOrderByOrderIds" parameterType="String">
        delete from pangfeng_order where order_id in
        <foreach item="orderId" collection="array" open="(" separator="," close=")">
            #{orderId}
        </foreach>
    </delete>
</mapper>