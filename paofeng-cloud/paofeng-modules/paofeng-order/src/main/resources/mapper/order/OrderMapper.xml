<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.paofeng.order.mapper.OrderMapper">

    <resultMap type="OrderVo" id="OrderResultVo">
        <result property="orderId" column="order_id"/>
        <result property="creatId" column="creat_id"/>
        <result property="creatName" column="creat_name"/>
        <result property="currentRider" column="current_rider"/>
        <result property="currentRiderName" column="current_rider_name"/>
        <result property="pickupAddress" column="pickup_address"/>
        <result property="destination" column="destination"/>
        <result property="type" column="type"/>
        <result property="productMoney" column="product_money"/>
        <result property="deliveryFee" column="delivery_fee"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <resultMap type="Order" id="OrderResult">
        <result property="orderId" column="order_id"/>
        <result property="creatId" column="creat_id"/>
        <result property="currentRider" column="current_rider"/>
        <result property="pickupAddress" column="pickup_address"/>
        <result property="destination" column="destination"/>
        <result property="type" column="type"/>
        <result property="productMoney" column="product_money"/>
        <result property="deliveryFee" column="delivery_fee"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <sql id="selectOrderVo">
        select order_id,
               creat_id,
               u.user_name creat_name,
               current_rider,
               n.user_name current_rider_name,
               pickup_address,
               destination,
               type,
               product_money,
               delivery_fee,
               create_time
        from pangfeng_order,
             sys_user u,
             sys_user n
    </sql>

    <select id="selectOrderList" parameterType="OrderVo" resultMap="OrderResultVo">
        <include refid="selectOrderVo"/>
        <where>
            <if test="orderId != null  and orderId != ''">and order_id like concat('%', #{orderId}, '%')</if>
            <if test="creatId != null ">and creat_id = #{creatId}</if>
            <if test="creatName != null ">and u.user_name like concat('%', #{creatName}, '%')</if>
            <if test="currentRider != null ">and current_rider = #{currentRider}</if>
            <if test="currentRiderName != null ">and n.user_name like concat('%', #{currentRiderName}, '%')</if>
            <if test="pickupAddress != null and pickupAddress != ''">and pickup_address like concat('%',
                #{pickupAddress}, '%')
            </if>
            <if test="destination != null  and destination != ''">and destination like concat('%', #{destination},
                '%')
            </if>
            <if test="type != null  and type != ''">and type = #{type}</if>
            <if test="createTime != null ">and create_time = #{createTime}</if>
        </where>
    </select>

    <select id="selectOrderByOrderId" parameterType="String" resultMap="OrderResultVo">
        <include refid="selectOrderVo"/>
        where order_id = #{orderId}
    </select>

    <insert id="insertOrder" parameterType="Order">
        insert into pangfeng_order
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="orderId != null">order_id,</if>
            <if test="creatId != null">creat_id,</if>
            <if test="currentRider != null">current_rider,</if>
            <if test="pickupAddress != null">pickup_address,</if>
            <if test="destination != null">destination,</if>
            <if test="type != null">type,</if>
            <if test="productMoney != null">product_money,</if>
            <if test="deliveryFee != null">delivery_fee,</if>
            <if test="createTime != null">create_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="orderId != null">#{orderId},</if>
            <if test="creatId != null">#{creatId},</if>
            <if test="currentRider != null">#{currentRider},</if>
            <if test="pickupAddress != null">#{pickupAddress},</if>
            <if test="destination != null">#{destination},</if>
            <if test="type != null">#{type},</if>
            <if test="productMoney != null">#{productMoney},</if>
            <if test="deliveryFee != null">#{deliveryFee},</if>
            <if test="createTime != null">#{createTime},</if>
        </trim>
    </insert>

    <update id="updateOrder" parameterType="Order">
        update pangfeng_order
        <trim prefix="SET" suffixOverrides=",">
            <if test="creatId != null">creat_id = #{creatId},</if>
            <if test="currentRider != null">current_rider = #{currentRider},</if>
            <if test="pickupAddress != null">pickup_address = #{pickupAddress},</if>
            <if test="destination != null">destination = #{destination},</if>
            <if test="type != null">type = #{type},</if>
            <if test="productMoney != null">product_money = #{productMoney},</if>
            <if test="deliveryFee != null">delivery_fee = #{deliveryFee},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where order_id = #{orderId}
    </update>

    <delete id="deleteOrderByOrderId" parameterType="String">
        delete
        from pangfeng_order
        where order_id = #{orderId}
    </delete>

    <delete id="deleteOrderByOrderIds" parameterType="String">
        delete from pangfeng_order where order_id in
        <foreach item="orderId" collection="array" open="(" separator="," close=")">
            #{orderId}
        </foreach>
    </delete>
</mapper>